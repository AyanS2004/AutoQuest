# RAGbot Pro Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (optional - for future SQL database support)
DATABASE_URL=postgresql://user:password@localhost/ragbot

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# AI Models
EMBEDDING_MODEL=BGE  # Options: MINILM, MPNET, E5, BGE
QA_MODEL=deepset/roberta-base-squad2
GENERATION_MODEL=microsoft/DialoGPT-medium
CHAT_MODEL=microsoft/DialoGPT-large

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4000

# Vector Database
VECTOR_DB_TYPE=chroma  # Options: faiss, chroma, qdrant
VECTOR_DB_PATH=./vector_db

# Caching
ENABLE_CACHE=true
CACHE_TTL=3600

# Monitoring
ENABLE_METRICS=true
ENABLE_SENTRY=false
SENTRY_DSN=your-sentry-dsn-here

# File Processing
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json 